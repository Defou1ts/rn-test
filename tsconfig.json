{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"baseUrl": ".",
		"paths": {
			"@interfaces/*": ["src/interfaces/*"],
			"@components/*": ["src/components/*"],
			"@hooks/*": ["src/hooks/*"],
			"@utils/*": ["src/utils/*"],
			"@types/*": ["src/types/*"],
			"@constants/*": ["src/constants/*"],
			"@screens/*": ["src/screens/*"],
			"@theme/*": ["src/theme/*"],
			"@config/*": ["src/config/*"],
			"@providers/*": ["src/providers/*"]
		}
	}
}
